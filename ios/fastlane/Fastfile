default_platform(:ios)

platform :ios do
  desc "Build and export the iOS app"
  lane :build_and_export do
    build_app(
      workspace: "Runner.xcworkspace",
      scheme: "Runner",
      clean: true,
      output_directory: "./build",
      export_method: "development",
      # هذه الخيارات مهمة لتجاوز خطأ التوقيع
      export_options: {
        signingStyle: "manual",
        provisioningProfiles: {
          "com.your.bundle.id" => "Your_Provisioning_Profile_Name" # استبدل بمعلوماتك
        }
      }
    )
  end
end
